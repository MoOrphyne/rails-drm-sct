<% if @order.order_items.exists? %>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-6" id="total-amount"><h4><%= humanized_money_with_symbol(@order.total.to_f/100) %></h4></div>
  </div>
  <%= form_tag order_payment_path(@order), :method => :post do %>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="Drum-Society"
      data-email="<%= current_user.email %>"
      data-description="<%= @order.packs.count %> Articles"
      data-amount="<%= @order.total %>"
      data-currency="EUR">
    </script>

  <% end %>
<% end %>
