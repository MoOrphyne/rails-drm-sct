<div class="container">
  <div class="pack-infos">
    <div class="row align-items-center">
      <div class="col-xs-12 col-md-6">
        <img src="<%= cl_image_path @pack.photo %>" alt="" class="pack-img">
      </div>
      <div class="col-xs-12 col-md-6">
        <h3><%= @pack.title %></h3>
        <p><%= @pack.description %></p>
        <%= link_to "Purchase #{humanized_money_with_symbol(@pack.price)}", root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
