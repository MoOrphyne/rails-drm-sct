<div class="navbar navbar-dark bg-dark box-shadow">
  <div class="container d-flex justify-content-between">
    <%= link_to 'Drum Society', root_path, class: 'navbar-brand d-flex align-items-center' %>
    <div class="right-nav">
      <% if current_user %>
        <% if current_user.admin %>
          <%= link_to 'Admin', admin_path, class: "navbar-wagon-item navbar-wagon-link"  %>
        <% end %>
        <%= link_to 'Dashboard', profile_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link") %>
      <% else %>
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to('Register', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link")  %>
      <% end %>
    </div>
  </div>
</div>
