<div class="form-wrapper">
  <div class="form-container">
    <div class="mx-auto text-center">
      <h1 class="display-4">New Pack</h1>
      <p class="lead">Create a new pack</p>
      <i class="fas fa-plus-circle pt-1" style="font-size: 3em"></i>
    </div>
    <div class="form-content">
      <%= simple_form_for(@pack, url: admin_packs_path, method: :post) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <div class="row">
          <div class="col-sm-6 filter">
            <%= f.input :genre, collection: Pack::GENRES, input_html: { class: 'select2' }, label: false %>
          </div>
          <div class="col-sm-6">
            <%= f.input :price, label: false %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="col-sm-6">
            <%= f.input :file %>
          </div>
        </div>
        <%= f.input :infos, collection: Pack::INFOS, input_html: { class: "js-example-basic-multiple", name: "infos[]", multiple: "multiple" } %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
